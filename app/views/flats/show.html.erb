<div class="banner" style="background-image: url('<%= @flat.flat_url.nil? || @flat.flat_url.empty? ? "https://source.unsplash.com/random?sig=#{rand(1..1000)}" : @flat.flat_url %>')"></div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class="flat-show-address"><%= @flat.address %></p>
      </div>
      <div class="flat-show-card">
        <h3>A bit more about this flat...</h3>
        <p><%= @flat.description %></p>
        <img class="map" src="https://maps.googleapis.com/maps/api/staticmap?center=<%= @flat.address %>&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C<%= @flat.address %>&key=AIzaSyB_rCAe6IPbEtm8om3NVth5wyajOzbZIi4" alt="">
      </div>
    </div>
    <div class="col-4">
      <div class="flat-show-card">
        <h5>Book this place</h5>
        <form action="">
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroupFileAddon01">From:</span>
            </div>
            <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <div class="input-group mt-2">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroupFileAddon01">To:</span>
            </div>
            <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
          </div>
          <input type="submit" value="Book" class="btn btn-success mt-2 w-100">
        </form>
      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <i class="fas fa-user-friends mr-2"></i><%= @flat.number_of_guests %>
          </div>
          <div class="flex ml-3">
            <i class="fas fa-euro-sign mr-2"></i> <%= @flat.price_per_night %>
          </div>
        </div>
      </div>
      <div class="flat-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>
          <div class="flex">
            <i class="fab fa-facebook-square fa-2x mr-2"></i>
            <i class="fab fa-twitter-square fa-2x mr-2"></i>
            <i class="fab fa-pinterest-square fa-2x mr-2"></i>
            <i class="fas fa-envelope-square fa-2x"></i>
          </div>
        </div>
      </div>
      <div class="flat-show-card d-flex justify-content-center">
        <%= link_to 'Back', flats_path, class: 'btn btn-outline-primary' %>
        <%= link_to 'Edit', edit_flat_path(@flat), class: 'btn btn-outline-warning ml-3' %>
        <%= link_to 'Remove', flat_path(@flat), method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-outline-danger ml-3' %>
      </div>
    </div>
  </div>
</div>
